<?xml version='1.0' encoding='utf-8'?>
<widget id="al.glen.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Glen Cordova</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="http://localhost/index.html" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <access origin="*" />
    <config-file parent="/*" target="AndroidManifest.xml" xmlns:android="http://schemas.android.com/apk/res/android">
        <uses-permission android:name="android.permission.INTERNET" />
    </config-file>
    <network-security-config>
        <domain-inclusion-list>
            <include domain="192.168.1.12:9998" />
        </domain-inclusion-list>
    </network-security-config>
    <preference name="loglevel" value="DEBUG" />
    <preference name="debug" value="true" />
    <preference name="android-webview-allow-unsecured-urls" value="true" />
    <preference name="AllowNavigation" value="true" />
</widget>
